<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="stock.report_delivery_document">
			<t t-call="web.html_container">
				<t t-call="web.external_layout">
					<t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
					<div class="page">
						<div class="row" name="customer_address">
							<div class="col-xs-4 pull-right">
								<div>
									<span><strong>Dirección del Cliente:</strong></span>
								</div>
								<div t-if="o.move_lines and o.move_lines[0].partner_id" name="partner_header">
									<div t-field="o.move_lines[0].partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True}"/>
								</div>
								<div t-if="not (o.move_lines and o.move_lines[0].partner_id) and o.partner_id" name="partner_header">
									<div t-field="o.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True}"/>
								</div>
							</div>
						</div>
						<h2>
							<span t-field="o.name"/>
						</h2>
						<div class="row mt32 mb32" name="driver_info" width="100%">
							<div class="col-xs-3" t-if="o.tipo_reg">
								<strong>Tipo de registro:</strong>
								<p t-field="o.tipo_reg"/>
							</div>
							<div class="col-xs-3" t-if="o.purchase_id">
								<strong>Orden de compra:</strong>
								<p t-field="o.purchase_id"/>
							</div>
							<div class="col-xs-3" t-if="o.n_document">
								<strong>N° de documento:</strong>
								<p t-field="o.n_document"/>
							</div>
							<div class="col-xs-3" t-if="o.hora_llegada">
								<strong>Hora de llegada:</strong>
								<p t-field="o.hora_llegada"/>
							</div>
							<div class="col-xs-3" t-if="o.hora_ingreso">
								<strong>Hora de ingreso:</strong>
								<p t-field="o.hora_ingreso"/>
							</div>
							<div class="col-xs-3" t-if="o.nombre_chofer">
								<strong>Nombre del chofer:</strong>
								<p t-field="o.nombre_chofer"/>
							</div>
							<div class="col-xs-3" t-if="o.tipo_trans">
								<strong>Tipo de transporte:</strong>
								<p t-field="o.tipo_trans"/>
							</div>
							<div class="col-xs-3" t-if="o.placas_tractor">
								<strong>Placas del tractor:</strong>
								<p t-field="o.placas_tractor"/>
							</div>
							<div class="col-xs-3" t-if="o.placas_caja">
								<strong>Placas de caja:</strong>
								<p t-field="o.placas_caja"/>
							</div>
							<div class="col-xs-3" t-if="o.placas_caja_dos">
								<strong>Placas de caja 2:</strong>
								<p t-field="o.placas_caja_dos"/>
							</div>
							<div class="col-xs-3" t-if="o.condiciones_trans">
								<strong>Condiciones del transporte:</strong>
								<p t-field="o.condiciones_trans"/>
							</div>
							<div class="col-xs-3" t-if="o.proveedor_linea">
								<strong>Proveedor y linea de transporte:</strong>
								<p t-field="o.proveedor_linea"/>
							</div>
							<div class="col-xs-3" t-if="o.tipo_licencia">
								<strong>Tipo de licencia:</strong>
								<p t-field="o.tipo_licencia"/>
							</div>
							<div class="col-xs-3" t-if="o.licencia">
								<strong>N° de licencia:</strong>
								<p t-field="o.licencia"/>
							</div>
							<div class="col-xs-3" t-if="o.origen">
								<strong>Origen:</strong>
								<p t-field="o.origen"/>
							</div>
							<div class="col-xs-3" t-if="o.destino">
								<strong>Destino:</strong>
								<p t-field="o.destino"/>
							</div>
							<div class="col-xs-3" t-if="o.cedis">
								<strong>CEDIS:</strong>
								<p t-field="o.cedis"/>
							</div>
						</div>
						<table class="table table-condensed">
							<thead>
								<tr>
									<th t-if="o.origin"><strong>Orden (Origen)</strong></th>
									<th name="td_sched_date_h">
										<strong>Fecha</strong>
									</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td t-if="o.origin">
										<span t-field="o.origin"/>
									</td>
									<td name="td_sched_date">
										<t t-if="o.state == 'done'">
											<span t-field="o.date_done"/>
										</t>
										<t t-if="o.state != 'done'">
											<span t-field="o.scheduled_date"/>
										</t>
									</td>
								</tr>
							</tbody>
						</table>
						<table class="table table-condensed mt48" t-if="o.state!='done'">
							<thead>
								<tr>
									<th><strong>Producto</strong></th>
									<th><strong>Cantidad</strong></th>
								</tr>
							</thead>
							<tbody>
								<t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
								<tr t-foreach="lines" t-as="move">
									<td><span t-field="move.product_id"/></td>
									<td>
										<span t-field="move.product_uom_qty"/>
										<span t-field="move.product_uom"/>
									</td>
								</tr>
							</tbody>
						</table>
						<table class="table table-condensed mt48" t-if="o.move_line_ids and o.state=='done'">
							<t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')" groups="stock.group_production_lot"/>
							<thead>
								<tr>
									<th><strong>Producto</strong></th>
									<th name="lot_serial" t-if="has_serial_number">
										Lote/Número de serie
									</th>
									<th class="text-center"><strong>Cantidad</strong></th>
								</tr>
							</thead>
							<tbody>
								<tr t-foreach="o.move_line_ids" t-as="move_line">
									<td>
										<span t-field="move_line.product_id"/>
										<p t-if="o.picking_type_code == 'outgoing'">
											<span t-field="move_line.product_id.sudo().description_pickingout"/>
										</p>
										<p t-if="o.picking_type_code == 'incoming'">
											<span t-field="move_line.product_id.sudo().description_pickingin"/>
										</p>
									</td>
									<t t-if="has_serial_number">
										<td>
											<table width="100%">
												<tr>
													<td>
														<span t-field="move_line.lot_id"/>
														<t t-if="not move_line.lot_id">
															<span t-field="move_line.lot_name"/>
														</t>
													</td>
													<td name="lot_qty">
														<t t-if="move_line.product_qty"> 
															<span t-field="move_line.product_qty"/>
														</t>
													</td>
												</tr>
											</table>
										</td>
									</t>
									<td class="text-center">
										<span t-field="move_line.qty_done"/>
										<span t-field="move_line.product_uom_id"/>
									</td>
								</tr>
							</tbody>
						</table>
						<p t-if="o.backorder_id">
							Este envío es un pedido parcial de <t t-esc="o.backorder_id.name"/>.
						</p>
						<p>
							<t t-if="o.search([('backorder_id', '=', o.id), ('state', 'not in', ['cancel', 'done'])])">
								Todos los artículos no pudieron ser enviados, los restantes serán enviados tan pronto como estén disponibles.
							</t>
						</p>
					</div>
				</t>
			</t>
		</template>
	</data>
</odoo>