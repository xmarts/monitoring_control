<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="report_monitoring_control">
			<t t-call="web.html_container">
				<t t-foreach="docs" t-as="o">
				<t t-call="web.external_layout">
					<div class="page">
						<h2>
							<span t-field="o.name"/>
						</h2>
						<div class="row mt32 mb32" name="driver_info" width="100%">
							<div class="col-xs-3" t-if="o.tipo_reg">
								<strong>Tipo de registro:</strong>
								<p t-field="o.tipo_reg"/>
							</div>
							<div class="col-xs-3" t-if="o.purchase_id">
								<strong>Orden de compra:</strong>
								<p t-field="o.purchase_id"/>
							</div>
							<div class="col-xs-3" t-if="o.hora_llegada">
								<strong>Hora de llegada:</strong>
								<p t-field="o.hora_llegada"/>
							</div>
							<div class="col-xs-3" t-if="o.hora_ingreso">
								<strong>Hora de ingreso:</strong>
								<p t-field="o.hora_ingreso"/>
							</div>
							<div class="col-xs-3" t-if="o.nombre_chofer">
								<strong>Nombre del chofer:</strong>
								<p t-field="o.nombre_chofer"/>
							</div>
							<div class="col-xs-3" t-if="o.tipo_trans">
								<strong>Tipo de transporte:</strong>
								<p t-field="o.tipo_trans"/>
							</div>
							<div class="col-xs-3" t-if="o.placas_tractor">
								<strong>Placas del tractor:</strong>
								<p t-field="o.placas_tractor"/>
							</div>
							<div class="col-xs-3" t-if="o.placas_caja">
								<strong>Placas de caja:</strong>
								<p t-field="o.placas_caja"/>
							</div>
							<div class="col-xs-3" t-if="o.placas_caja_dos">
								<strong>Placas de caja 2:</strong>
								<p t-field="o.placas_caja_dos"/>
							</div>
							<div class="col-xs-3" t-if="o.condiciones_trans">
								<strong>Condiciones del transporte:</strong>
								<p t-field="o.condiciones_trans"/>
							</div>
							<div class="col-xs-3" t-if="o.proveedor_linea">
								<strong>Proveedor y linea de transporte:</strong>
								<p t-field="o.proveedor_linea"/>
							</div>
							<div class="col-xs-3" t-if="o.tipo_licencia">
								<strong>Tipo de licencia:</strong>
								<p t-field="o.tipo_licencia"/>
							</div>
							<div class="col-xs-3" t-if="o.licencia">
								<strong>NÂ° de licencia:</strong>
								<p t-field="o.licencia"/>
							</div>
							<div class="col-xs-3" t-if="o.origen">
								<strong>Origen:</strong>
								<p t-field="o.origen"/>
							</div>
							<div class="col-xs-3" t-if="o.destino">
								<strong>Destino:</strong>
								<p t-field="o.destino"/>
							</div>
							<div class="col-xs-3" t-if="o.cedis">
								<strong>CEDIS:</strong>
								<p t-field="o.cedis"/>
							</div>
						</div>
						
					</div>
				</t>
			</t>
			</t>
		</template>
		<report
            string="Control de acceso"
            id="reporte_monitoring_control"
            model="monitoring.control"
            report_type="qweb-pdf"
            name="monitoring_control.report_monitoring_control"
            file="monitoring_control.reports"
        />
	</data>
</odoo>